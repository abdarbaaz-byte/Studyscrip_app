rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    // Allow public read access to all files.
    // This is useful for development and for public assets like images.
    // For production apps with sensitive data, you should restrict access.
    match /{allPaths=**} {
      allow read;
      allow write: if request.auth != null; // Only authenticated users can write
    }
  }
}
