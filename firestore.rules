rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // For development, allow read/write access for a short period.
    // In production, you should secure this.
    // For example, only allow authenticated users to write.
    // allow read, write: if request.auth != null;
    match /{document=**} {
      allow read, write: if true;
    }
  }
}
